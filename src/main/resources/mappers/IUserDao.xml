<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yates.dao.IUserDao">
    <insert id="insertUser" parameterType="user">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_seckill_user(username, useraccount, userpassword, usergender, userage, useraddress, useremail)
            value(#{userName}, #{userAccount}, #{userPassword}, #{userGender}, #{userAge}, #{userAddress}, #{userEmail})
    </insert>

    <update id="updateUser" parameterType="user">
        update t_seckill_user set username=#{userName}, useraccount=#{userAccount}, userpassword=#{userPassword}, usergender=#{userGender}, userage=#{userAge}, useraddress=#{userAddress}, useremail=#{userEmail} where id=#{id}
    </update>

    <select id="queryUserById" parameterType="int" resultType="user">
        select * from t_seckill_user where id=#{id}
    </select>

    <select id="deleteUserById" parameterType="int">
        delete from t_seckill_user where id=#{id}
    </select>

    <sql id="commonSql">
        <if test="userVo != null">
            <if test="userVo.userName != null and userVo.userName != ''">
                and userVo.userName = "${userVo.userName}"
            </if>
            <if test="userVo.userAccount != null and userVo.userAccount != ''">
                and userVo.userAccount = "${userVo.userAccount}"
            </if>
            <if test="userVo.userPassword != null and userVo.userPassword != ''">
                and userVo.userPassword = "${userVo.userPassword}"
            </if>
            <if test="userVo.userGender != null and userVo.userGender != ''">
                and userVo.userGender = "${userVo.userGender}"
            </if>
            <if test="userVo.userAge != null and userVo.userAge != ''">
                and userVo.userAge = "${userVo.userAge}"
            </if>
            <if test="userVo.userAddress != null and userVo.userAddress != ''">
                and userVo.userAddress = "${userVo.userAddress}"
            </if>
            <if test="user.userEmail != null and userVo.userEmail != ''">
                and userVo.userEmail = "${userVo.userEmail}"
            </if>
        </if>
    </sql>

    <select id="queryUsers" parameterType="commonVo" resultType="user">
        select * from t_seckill_user
        <where>
            <include refid="commonSql"></include>
        </where>
    </select>
</mapper>