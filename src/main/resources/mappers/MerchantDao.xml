<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yates.dao.MerchantDao">

    <select id="queryMerchantById" parameterType="int" resultType="merchant">
		select merchantname,merchantaccount,merchantpassword,merchantscope,merchantshopname from t_seckill_merchant where id = #{value}
	</select>

    <insert id="insertMerchant" parameterType="merchant">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_seckill_merchant(merchantname,merchantaccount,merchantpassword,merchantscope,merchantshopname) value(#{merchantName},#{merchantAccount},#{merchantPassword},#{merchantScope}, #{merchantShopname})
    </insert>

    <update id="updateMerchant" parameterType="merchant">
        update t_seckill_merchant set merchantname=#{merchantName}, merchantaccount=#{merchantAccount}, merchantpassword=#{merchantPassword}, merchantscope=#{merchantScope}, merchantshopname=#{merchantShopname}
    </update>

    <delete id="deleteMerchantById" parameterType="int">
        delete from t_seckill_merchant where id = #{id}
    </delete>

    <sql id="customSql">
         <if test="merchantVo != null">
             <if test="merchantVo.merchantName != null and merchantVo.merchantName != ''">
                 and merchantVo.merchantName = "${merchantVo.merchantName}"
             </if>
             <if test="merchantVo.me rchantShopname != null and merchantVo.merchantShopname != ''">
                 and merchantVo.merchantShopname = "${merchantVo.merchantShopname}"
             </if>
             <if test="merchantVo.mercahntAccount != null and merchantVo.mercahntAccout != ''">
                 and merchantVo.merchantAccount = "${merchantVo.merchantAccount}"
             </if>
             <if test="merchantVo.merchantPassword != null and merchantVo.merchantPassword != ''">
                 and merchantVo.merchantPassword = "${merchantVo.merchantPassword}"
             </if>
             <if test="merchantVo.merchantScope != null">
                 and merchantVo.merchantScope = "${merchantVo.merchantScope}"
             </if>
         </if>
    </sql>

    <select id="queryMerchants" parameterType="commonVo" resultType="merchant">
        select * from t_seckill_merchant
        <where>
            <include refid="customSql"></include>
        </where>
    </select>
</mapper>
